<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:WallpaperMedia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="WallpaperMedia.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="WallpaperMedia"
        Background="White"
        ExtendClientAreaToDecorationsHint="True"
        WindowStartupLocation="CenterScreen">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Window.Styles>
        <Style Selector="DataGridCell">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*,Auto" Margin="10 25 10 10">
        <!-- 顶部按钮 -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button Content="添加文件" Margin="0,0,10,0" />
            <Button Content="添加文件夹" Margin="0,0,10,0" />
            <Button Content="清空列表" />
        </StackPanel>

        <!-- 文件列表 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="FileList">
                <Grid x:Name="DynamicGrid" AttachedToVisualTree="OnGridLoaded">
                    <!-- 定义四列 -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- 底部按钮 -->
        <Grid Grid.Row="2" RowDefinitions="Auto" ColumnDefinitions="*,Auto" Margin="0,10,0,0">
            <DockPanel LastChildFill="False">
                <!-- 导出格式选择 -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0"
                            DockPanel.Dock="Left">
                    <TextBlock Text="导出格式:" VerticalAlignment="Center" Margin="0 0 5 0" />
                    <ComboBox Width="100" SelectedIndex="0">
                        <ComboBoxItem Content="MP3" />
                        <ComboBoxItem Content="WAV" />
                        <!-- 添加其他格式 -->
                    </ComboBox>
                </StackPanel>

                <!-- 质量选择 -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                            Margin="0,0,20,0" DockPanel.Dock="Left">
                    <TextBlock Text="导出类型:" VerticalAlignment="Center" Margin="0 0 5 0" />
                    <ComboBox Width="100" SelectedIndex="0">
                        <ComboBoxItem Content="全部" />
                        <ComboBoxItem Content="视频" />
                        <ComboBoxItem Content="图片" />
                        <!-- 添加其他质量选项 -->
                    </ComboBox>
                </StackPanel>

                <!-- 输出目录 -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left"
                            VerticalAlignment="Center" Margin="0,0,20,0" DockPanel.Dock="Left">
                    <TextBlock Text="输出目录:" VerticalAlignment="Center" Margin="0 0 5 0" />
                    <TextBox Width="200" Name="OutputDirectory" />
                    <Button Content="..." Width="30" />
                </StackPanel>


                <!-- 开始转换按钮 -->
                <Button Content="开始转换" Background="Orange" Foreground="White"
                        HorizontalAlignment="Right" DockPanel.Dock="Right" />
            </DockPanel>
        </Grid>
    </Grid>
</Window>