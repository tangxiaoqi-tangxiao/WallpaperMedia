        <!-- 内容 -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <UniformGrid x:Name="GridContentColumn" Rows="0" Columns="4" Margin="10 0 10 10" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            </UniformGrid>
        </ScrollViewer>
        
        <!-- 底部按钮 -->
        <Grid Grid.Row="1" RowDefinitions="Auto" ColumnDefinitions="*,Auto" Margin="0,10,0,0">
            <DockPanel LastChildFill="False">
                <!-- 导出格式选择 -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0"
                            DockPanel.Dock="Left">
                    <TextBlock Text="是否需要解包:" VerticalAlignment="Center" Margin="0 0 5 0" />
                    <ComboBox Width="100" SelectedIndex="0">
                        <ComboBoxItem Content="全部" />
                        <ComboBoxItem Content="是" />
                        <ComboBoxItem Content="否" />
                        <!-- 添加其他格式 -->
                    </ComboBox>
                </StackPanel>
        
                <!-- 质量选择 -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                            Margin="0,0,20,0" DockPanel.Dock="Left">
                    <TextBlock Text="导出类型:" VerticalAlignment="Center" Margin="0 0 5 0" />
                    <ComboBox Width="100" SelectedIndex="0">
                        <ComboBoxItem Content="全部" />
                        <ComboBoxItem Content="视频" />
                        <ComboBoxItem Content="图片" />
                        <!-- 添加其他质量选项 -->
                    </ComboBox>
                </StackPanel>
        
                <!-- 输出目录 -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch"
                            VerticalAlignment="Center" Margin="0,0,20,0" DockPanel.Dock="Left">
                    <TextBlock Text="输出目录:" VerticalAlignment="Center" Margin="0 0 5 0" />
                    <TextBox Width="200" Name="OutputDirectory" />
                    <Button Content="..." Width="30" />
                </StackPanel>
        
                <!-- 导出选中项 -->
                <Button Content="导出选中项"
                        HorizontalAlignment="Right" DockPanel.Dock="Right" Name="Button" />
            </DockPanel>
        </Grid>
